<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Закругленные углы -->
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0356AF" /> <!-- Цвет фона внутри контура (белый) -->
            <corners android:radius="6dp" /> <!-- Закругленные углы с немного меньшим радиусом -->
        </shape>
    </item>
</layer-list>