<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/button_payment_black"
    android:gravity="center"
    android:layout_height="56dp"
    android:layout_margin="4dp"
    android:layout_marginLeft="?acqViewHorizontalOffset"
    android:layout_marginRight="?acqViewHorizontalOffset"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/acq_fps_button_padding">

    <TextView
        style="@style/TextAppearance.AppCompat.Widget.Button"
        android:id="@+id/acq_payment_fps_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/pay_with"
        android:textAllCaps="true"
        android:textColor="@color/acq_colorMain"
        android:textSize="@dimen/acq_medium_text_size"
        tools:text="Оплатить через" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_width="44dp"
        android:scaleType="centerInside"
        android:src="@drawable/acq_fps_logo_white"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

</LinearLayout>