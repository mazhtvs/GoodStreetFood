<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/acq_sp_use_system_keyboard"
        android:title="@string/settings_title_use_system_keyboard"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:key="@string/acq_sp_recurrent_payment"
        android:title="@string/settings_title_recurrent_payment"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/acq_sp_fps"
        android:title="@string/settings_title_fps"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/acq_sp_tinkoff_pay"
        android:title="@string/settings_title_tinkoff_pay"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/acq_sp_yandex_pay"
        android:title="@string/settings_title_yandex_pay"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/acq_sp_combi_init"
        android:title="@string/settings_title_combi_init"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="@string/acq_sp_dark_mode_auto_id"
        android:entries="@array/acq_sp_mode"
        android:entryValues="@array/acq_sp_mode"
        android:key="@string/acq_sp_dark_mode_id"
        android:title="@string/settings_title_dark_mode_id"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="@string/acq_sp_check_type_no"
        android:entries="@array/acq_sp_check_type_keys"
        android:entryValues="@array/acq_sp_check_type_keys"
        android:key="@string/acq_sp_check_type_id"
        android:title="@string/settings_title_check_type_id"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="@string/acq_sp_camera_type_card_io"
        android:entries="@array/acq_sp_camera_type_keys"
        android:entryValues="@array/acq_sp_camera_type_keys"
        android:key="@string/acq_sp_camera_type_id"
        android:title="@string/settings_title_camera"
        app:iconSpaceReserved="false" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/acq_show_payment_notifications"
        android:title="@string/settings_title_show_payment_notifications"
        app:iconSpaceReserved="false" />

</androidx.preference.PreferenceScreen>
