<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/acq_snackbar_container"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp"
        >

        <ImageView
            android:id="@+id/acq_snackbar_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/acq_ic_snackbar_icon_background"
            android:scaleType="centerInside"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/acq_ic_card_sparkle" />

        <TextView
            android:id="@+id/acq_snackbar_text"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="64dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/acq_large_text_size"
            tools:text="Карта •7913 удалена" />

    </androidx.cardview.widget.CardView>

</FrameLayout>
